---
import '@/styles/globals.css'
import { Button } from "@/components/ui/button"
---

<nav id="navbar" class="top-0 z-50 w-full py-6 bg-neutral-700 shadow-xl backdrop-filter backdrop-blur-lg bg-opacity-30">
    <div>
       <div class="container flex flex-row flex-wrap items-baseline justify-center sm:justify-between">
            <div>
                <a href="#home" class="hidden sm:block text-xl md:text-2xl font-bold text-white">Alex Taveras-Crespo</a>
            </div>
            
            <div class="flex flex-row items-center gap-2 sm:gap-4 lg:gap-8">
                <!-- About me Button -->
                <Button variant={"ghost"}>
                    <a href="#about" class="text-sm sm:text-base md:text-lg font-medium text-white tracking-tight">About Me</a>
                </Button>

                <!-- Projects Button -->
                <Button variant={"ghost"}>
                    <a href="#projects" class="text-sm sm:text-base md:text-lg font-medium text-white tracking-tight">Projects</a>
                </Button>

                <!-- About me Button -->
                <Button variant={"ghost"}>
                    <a href="#education" class="text-sm sm:text-base md:text-lg font-medium text-white tracking-tight">Education</a>
                </Button>
            </div>
       </div>
    </div>
</nav>

<script>
	// When the user scrolls the page, execute myFunction
    window.onscroll = function() {myFunction()};

    // Get the header
    var navbar = document.getElementById("navbar");

    // Get the offset position of the navbar
    var sticky = navbar!.offsetTop;

    // Immediately add the sticky class to the header if it's already in a sticky position (i.e on reload)
    if (window.scrollY > sticky) {
        navbar!.classList.add("sticky");
    }

    // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
    function myFunction() {
        if (window.scrollY > sticky) {
            navbar!.classList.add("sticky");
        } else {
            navbar!.classList.remove("sticky");
        }
    }
</script>