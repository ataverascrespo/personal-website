---
import { Button } from "@/components/ui/button";

---
<section id="home" class="w-full h-screen py-12 md:py-24 lg:py-32 container">
    <div class="pr-4 md:pr-6 ">
      <div class="flex flex-row items-center justify-center gap-24">

        <!-- My image -->
        <div class="flex flex-col justify-center space-y-4 text-center w-1/3">
            <img 
                src="https://media.licdn.com/dms/image/D5603AQEC3RxNVXPvnQ/profile-displayphoto-shrink_800_800/0/1671305163383?e=1702512000&v=beta&t=__xqZUHH85QjVNP2DU9ygapP0dAEaTBar0nHKxZlQn8"
                class="rounded-full bg-gradient-to-r p-[1px] from-[#7928ca] to-[#ff0080]">
        </div>
        
        <!-- Hero header / text -->
        <div class="flex flex-col justify-center text-left">
          <div class="zoomIn space-y-8">
            <h1 class=" text-3xl font-bold tracking-tight sm:text-5xl xl:text-7xl animate-text bg-gradient-to-r from-emerald-500 via-purple-500 to-red-500 bg-clip-text text-transparent">
                Alex Taveras-Crespo
            </h1>
            <div class="flex flex-row items-center justify-center gap-4">
                <!-- About me Button -->
                <Button variant={"default"} size={"lg"} className="w-1/3">
                    <a href="https://www.linkedin.com/in/alex-taveras-crespo" class="text-lg font-normal text-neutral-900 tracking-tight">
                       <div class="flex flex-row gap-2">
                            My LinkedIn
                            <img src="/linkedIn.svg" alt="linkedin">
                       </div>
                    </a>
                </Button>
    
                <!-- About me Button -->
                <Button variant={"default"} size={"lg"} className="w-1/3">
                    <a href="https://github.com/ataverascrespo" class="text-lg font-normal text-neutral-900 tracking-tight">
                        <div class="flex flex-row gap-2">
                            My GitHub
                            <img src="/github.svg" alt="github">
                       </div>
                    </a>
                </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>

<script>
	//Callback function for intersectionObserver API
	const callback = function (entries: any) {
		entries.forEach((entry: any) => {
			if (entry.isIntersecting) {
				entry.target.classList.add("animate-zoomIn");
			}
		});
	};

	//Create an observer
	const observer = new IntersectionObserver(callback);

	//Observe when the selected element enters viewport
	document.querySelectorAll(".zoomIn").forEach(function (target) {
		observer.observe(target);
	});
</script>