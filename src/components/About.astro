---
import { Prism } from '@astrojs/prism';
import HobbiesSkills from './HobbiesSkills.astro';
---

<!-- Section container -->
<section id="about" class="w-full h-full py-12 md:py-24 lg:py-32 svg bg-layer">

	<!--  Div container of content  -->
    <div class="flex flex-col items-center justify-center gap-24 container w-full">

		<!-- Content header -->
        <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl flex w-full items-center text-white font-bold text-center pb-4 before:mr-4 before:block before:h-px before:flex-grow before:bg-white after:ml-4 after:block after:h-px after:flex-grow after:bg-white">About Me</h1>
        
		<!-- Content text and image-->
		<div class="slideIn flex flex-col md:flex-row justify-center w-full gap-12 lg:gap-24 ">

			<!-- About me text -->
			<div class="flex flex-col w-full md:w-1/2 gap-8">
				<p class="text-lg md:text-xl lg:text-2xl">
					<span class="font-bold">Hey, I'm Alex ðŸ‘‹!</span> 
					I'm super passionate about software development.
				</p>
				<p class="text-base lg:text-lg">
					With a B.ScH in Computer Science from Trent University and a specialization in Software Engineering, I have developed a strong foundation in programming, software design/development, and cloud infrastructure. 
				</p>
				<p class="text-base lg:text-lg">
					I have experience working in enterprise software development and DevOps-focused roles, both in the public and private sectors. I value peer communication, team building, and problem solving, and I am always eager to adapt and evolve my learning strategies to fit the environment I am in.
				</p>
			</div>
				
						
			<!-- Image of me -->
			<div class="w-full pr-12 pl-6 md:w-1/2 lg:w-1/3">
				<img
				alt="alex taveras-crespo"
				src="/profile-pic.jpg"
				class="img rounded-xl"
			>
			</div>
		</div> <!-- Content text and image -->
		
		<div class="md:container w-full">
			<HobbiesSkills></HobbiesSkills>
		</div>

    </div>	<!--  Div container of content  -->
</section>

<style>
	.img {
		box-shadow: 2.5rem 2.5rem rgb(243, 243, 243);
	}

	.svg {
        width: 100%;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .bg-layer {
        background-image: url('./layer1.svg')
    }
</style>

<script>
	//Callback function for intersectionObserver API
	const callback = function (entries: any) {
		entries.forEach((entry: any) => {
			if (entry.isIntersecting) {
				entry.target.classList.add("animate-slideInUp");
			}
		});
	};

	//Create an observer
	const observer = new IntersectionObserver(callback);

	//Observe when the selected element enters viewport
	document.querySelectorAll(".slideIn").forEach(function (target) {
		observer.observe(target);
	});
</script>