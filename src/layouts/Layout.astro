---
import ChromeToolTip from "@/components/ChromeToolTip";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark" >
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dedicated Software Developer, solving complex problems with technology." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="/prism.css" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>

	<ChromeToolTip client:load/>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: rgb(21 21 21);
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

<script>
    import { type Container, type Engine, tsParticles } from "tsparticles-engine";
    import { loadFull } from 'tsparticles';
    
    
      window.particlesInit = async function (tsParticles: Engine) {
          await loadFull(tsParticles);
      }
      
      window.particlesLoaded = function (container: Container) {
          console.log("particlesLoaded callback");
      }
</script>